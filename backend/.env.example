# ==================== Server ====================
PORT=5000
NODE_ENV=development

# ==================== MongoDB ====================
MONGO_URI=mongodb://localhost:27017/ecoom

# ==================== JWT ====================
# Must be at least 32 characters. Use a secure random string in production.
JWT_ACCESS_SECRET=your_super_secret_access_key_min_32_chars_here
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_chars_here

# ==================== Redis ====================
# Defaults to redis://127.0.0.1:6379 if not set
REDIS_URL=redis://127.0.0.1:6379

# ==================== SMTP (for OTP emails) ====================
# For Gmail: enable App Passwords (not your main Gmail password)
# https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ==================== CORS ====================
CLIENT_URL=http://localhost:3000
